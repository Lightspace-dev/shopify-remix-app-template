{
  "name": "shopify-remix-app-template",
  "private": true,
  "scripts": {
    "build": "remix vite:build",
    "dev": "shopify app dev",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate && prisma migrate deploy",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc --noEmit",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite",
    "prepare": "husky",
    "format": "prettier --write . --ignore-path .gitignore",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest --run --project unit",
    "test:integration": "vitest --run --project integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "type": "module",
  "engines": {
    "node": "22.14.0"
  },
  "dependencies": {
    "@prisma/client": "6.4.0",
    "@remix-run/dev": "2.15.3",
    "@remix-run/fs-routes": "2.15.3",
    "@remix-run/node": "2.15.3",
    "@remix-run/react": "2.15.3",
    "@remix-run/serve": "2.15.3",
    "@shopify/app-bridge-react": "4.1.6",
    "@shopify/polaris": "13.9.3",
    "@shopify/shopify-app-remix": "3.7.1",
    "@shopify/shopify-app-session-storage-prisma": "6.0.1",
    "isbot": "5.1.23",
    "prisma": "6.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "vite-tsconfig-paths": "5.1.4"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.7",
    "@eslint/js": "9.20.0",
    "@playwright/test": "1.50.1",
    "@remix-run/route-config": "2.15.3",
    "@shopify/api-codegen-preset": "1.1.1",
    "@tailwindcss/vite": "4.0.7",
    "@types/eslint": "9.6.1",
    "@types/node": "22.13.4",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/browser": "2.1.9",
    "eslint": "9.20.1",
    "eslint-plugin-react": "7.37.4",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "playwright": "1.50.1",
    "prettier": "3.5.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.0.7",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1",
    "vite": "5.4.14",
    "vitest": "2.1.9",
    "vitest-browser-react": "0.1.1"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16"
  },
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16"
  },
  "author": "Lightspace",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json}": [
      "prettier --write"
    ]
  }
}
